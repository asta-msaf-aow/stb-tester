[MASTER]
persistent=no
extension-pkg-whitelist=cv2,lxml,numpy

[REPORTS]
msg-template={path}:{line}:{column}: [{msg_id}({symbol}), {obj}] {msg}
reports=no

[MESSAGES CONTROL]
disable=
  bad-classmethod-argument,
  bad-continuation,
  bad-option-value,
  blacklisted-name,
  consider-using-f-string,
  consider-using-with,
  cyclic-import,
  duplicate-code,
  empty-docstring,
  fixme,
  global-statement,
  import-outside-toplevel,
  inconsistent-return-statements,
  invalid-name,
  len-as-condition,
  locally-disabled,
  locally-enabled,
  misplaced-comparison-constant,
  missing-docstring,
  multiple-statements,
  no-else-break,
  no-else-continue,
  no-else-raise,
  no-else-return,
  no-init,
  no-self-use,
  protected-access,
  raise-missing-from,
  singleton-comparison,
  too-few-public-methods,
  too-many-ancestors,
  too-many-arguments,
  too-many-boolean-expressions,
  too-many-branches,
  too-many-instance-attributes,
  too-many-lines,
  too-many-locals,
  too-many-public-methods,
  too-many-return-statements,
  too-many-statements,
  ungrouped-imports,
  unnecessary-lambda-assignment,
  use-implicit-booleaness-not-comparison,
  wrong-import-position,

[CLASSES]
valid-metaclass-classmethod-first-arg=mcs

[IMPORTS]
analyse-fallback-blocks=no

[TYPECHECK]
ignored-classes=
  Buffer,
  Caps,
  cec,
  Client,
  Event,
  Frame,
  generator,
  gi.repository.Gst,
  MainLoop,
  numpy,
  pytest,
  Sample,
  _socketobject,

[VARIABLES]
dummy-variables-rgx=_

[FORMAT]
max-line-length=80
ignore-long-lines=https?://
